{
    "rules": {
        "indent": [
            2,
            4
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "max-len": [2, 120, 4],
        "complexity": [2, 8],
        "no-undef": false,
        "no-use-before-define": false,
        "vars-on-top": [2, true]
    },
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
    "ecmaFeatures": {
        "jsx": true
    }
}